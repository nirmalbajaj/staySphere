<%- include('../partials/head') %>
</head>
<body class="bg-gray-50"> 
  <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 max-w-2xl">
        <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-100">
            <h1 class="text-3xl font-bold mb-8 text-center text-gray-800">Create an Account</h1>
            <form action="/signup" method="POST" class="space-y-6">

                <%- include('../partials/errors.ejs') %>

                <div class="flex gap-4">
                    <div class="flex-1">
                        <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                        <input 
                            type="text" 
                            id="firstName"
                            name="firstName" 
                            placeholder="John" 
                            value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                            required
                        >
                    </div>
                    <div class="flex-1">
                        <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                        <input 
                            type="text" 
                            id="lastName"
                            name="lastName" 
                            placeholder="Doe" 
                            value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                            required
                        >
                    </div>
                </div>

                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                    <input 
                        type="email" 
                        id="email"
                        name="email" 
                        placeholder="john.doe@example.com" 
                        value="<%= oldInput.email ? oldInput.email : '' %>"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                        required
                    >
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input 
                        type="password" 
                        id="password"
                        name="password" 
                        placeholder="••••••••" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                        required
                    >
                </div>

                <div>
                    <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                    <input 
                        type="password" 
                        id="confirmPassword"
                        name="confirmPassword" 
                        placeholder="••••••••" 
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent transition"
                        required
                    >
                </div>

                <div class="bg-gray-50 p-4 rounded-lg">
                    <p class="text-sm font-medium text-gray-700 mb-2">I want to register as:</p>
                    <div class="flex gap-6">
                        <label class="flex items-center">
                            <input type="radio" name="userType" value="host" id="host" class="w-4 h-4 text-red-500 focus:ring-red-500" checked="<% oldInput.userType === "host"%>"/>
                            <span class="ml-2 text-gray-700">Host</span>
                        </label>
                        <label class="flex items-center">
                            <input type="radio" name="userType" value="guest" id="guest" class="w-4 h-4 text-red-500 focus:ring-red-500" checked="<% oldInput.userType === "guest"%>"/>
                            <span class="ml-2 text-gray-700">Guest</span>
                        </label>
                    </div>
                </div>

                <div class="flex items-center">
                    <input 
                        type="checkbox" 
                        name="terms" 
                        id="terms"
                        class="w-4 h-4 text-red-500 focus:ring-red-500 rounded"
                        required
                    >
                    <label for="terms" class="ml-2 text-sm text-gray-600">
                        I agree to the <span class="text-red-500">Terms & Conditions</span>
                    </label>
                </div>

                <button 
                    type="submit" 
                    class="w-full bg-red-500 text-white py-3 rounded-lg hover:bg-red-600 transition duration-300 font-medium shadow-sm hover:shadow-md"
                >
                    Create Account
                </button>
            </form>

            <p class="mt-6 text-center text-sm text-gray-600">
                Already have an account? 
                <a href="/login" class="text-red-500 hover:text-red-600 font-medium">Sign in</a>
            </p>
        </div>
    </main>
</body>
</html>