<header class="bg-gradient-to-r from-red-600 to-red-500 text-white py-5 shadow-lg">
  <nav class="container mx-auto flex flex-col md:flex-row justify-between items-center px-4">
    <!-- Logo and Brand -->
    <div class="flex items-center mb-4 md:mb-0">
      <svg class="h-8 w-8 text-white mr-2" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 3L4 9v12h5v-7h6v7h5V9l-8-6zm0 2.25l5.333 4v9.75h-2v-7H8.667v7h-2V9.25L12 5.25z"/>
      </svg>
      <a href="/" class="<%= currentPage === 'index' ? 'font-bold' : '' %> text-xl tracking-tight hover:text-white transition duration-300">staySphere</a>
    </div>

    <!-- Main Navigation -->
    <div class="flex flex-col md:flex-row items-center space-y-3 md:space-y-0">
      <!-- Main Menu -->
      <% if(isLoggedIn) { %>
        <% if(user && user.userType === 'guest') { %>
          <ul class="flex flex-wrap justify-center space-x-1 md:space-x-2 md:mr-6">
            <li>
              <a href="/homes" class="<%= currentPage === 'Home' ? 'bg-white text-red-600' : 'hover:bg-red-400' %> px-3 py-2 rounded-full text-sm font-medium transition duration-300 hover:bg-opacity-80 flex items-center">
                <svg class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
                </svg>
                Homes
              </a>
            </li>
            <li>
              <a href="/favorites" class="<%= currentPage === 'favorites' ? 'bg-white text-red-600' : 'hover:bg-red-400' %> px-3 py-2 rounded-full text-sm font-medium transition duration-300 hover:bg-opacity-80 flex items-center">
                <svg class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
                </svg>
                Favorites
              </a>
            </li>
            <li>
              <a href="/bookings" class="<%= currentPage === 'bookings' ? 'bg-white text-red-600' : 'hover:bg-red-400' %> px-3 py-2 rounded-full text-sm font-medium transition duration-300 hover:bg-opacity-80 flex items-center">
                <svg class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                Bookings
              </a>
            </li>
          </ul>
        <% } else { %>
          <!-- Host Menu -->
          <ul class="flex flex-wrap justify-center space-x-1 md:space-x-2 mb-3 md:mb-0 md:mr-6">
            <li>
              <a href="/host/host-home-list" class="<%= currentPage === 'host-Home' ? 'bg-white text-red-600' : 'hover:bg-red-400' %> px-3 py-2 rounded-full text-sm font-medium transition duration-300 hover:bg-opacity-80 flex items-center">
                <svg class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
                </svg>
                Host Homes
              </a>
            </li>
            <li>
              <a href="/host/add-home" class="<%= currentPage === 'addHome' ? 'bg-white text-red-600' : 'hover:bg-red-400' %> px-3 py-2 rounded-full text-sm font-medium transition duration-300 hover:bg-opacity-80 flex items-center">
                <svg class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
                </svg>
                Add Home
              </a>
            </li>
          </ul>
        <% } %>
      <% } %>

      <!-- Auth Menu -->
      <ul class="flex space-x-2">
        <% if(!isLoggedIn) { %>
          <li>
            <a href="/login" class="border border-white hover:bg-white hover:text-red-600 px-4 py-2 rounded-full text-sm font-medium transition duration-300">Login</a>
          </li>
          <li>
            <a href="/signup" class="bg-white text-red-600 hover:bg-red-100 px-4 py-2 rounded-full text-sm font-medium transition duration-300">Sign Up</a>
          </li>
        <% } else { %>
          <li>
            <form action="/logout" method="POST">
              <button type="submit" class="border border-white hover:bg-white hover:text-red-600 px-4 py-2 rounded-full text-sm font-medium transition duration-300 flex items-center">
                <svg class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V7.414l-5-5H3zm7 2v2.586l2.414 2.414H10z" clip-rule="evenodd" />
                  <path d="M14 7v1.586l2 2V5.414L14 7zm-1 3.414L15.414 9 13 6.586V9h-1v1.414z" />
                </svg>
                Logout
              </button>
            </form>
          </li>
        <% } %>
      </ul>
    </div>
  </nav>
</header>