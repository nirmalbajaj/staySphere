<%- include('../partials/head') %>
</head>
<body>
<%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xxl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Details of <%= home.houseName %> 
    </h2>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 w-full">
        <div class="relative">
          <img src="<%= home.photo %>" alt="<%= home.location %>" class="w-full h-96 object-cover" onerror="this.src='https://via.placeholder.com/400x300?text=No+Image+Available'">
          <div class="absolute top-4 right-4">
            <button class="bg-white p-2 rounded-full shadow-lg hover:bg-gray-100">
              <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </button>
          </div>
        </div>
        <div class="p-8">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-3xl font-bold text-gray-800"><%= home.houseName %></h3>
            <div class="flex items-center">
              <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <span class="ml-2 text-xl font-semibold text-gray-700"><%= home.rating %>/5</span>
            </div>
          </div>

          <div class="flex items-center mb-6">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="ml-2 text-lg text-gray-600"><%= home.location %></span>
          </div>

          <div class="border-t border-b border-gray-200 py-6 my-6">
            <h4 class="text-xl font-semibold mb-4">Property Highlights</h4>
            <div class="grid grid-cols-2 gap-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                </svg>
                <span>2 Bedrooms</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
                <span>Air Conditioning</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>Free Wifi</span>
              </div>
              <div class="flex items-center">
                <svg class="w-5 h-5 text-gray-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                </svg>
                <span>Swimming Pool</span>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between mb-8">
            <div>
              <span class="text-3xl font-bold text-red-500">â‚¹<%= home.price %></span>
              <span class="text-gray-600 ml-2">per night</span>
            </div>
            <div class="flex gap-4">
              <%- include('../partials/favorite.ejs') %>
            </div>
          </div>

          <div class="bg-gray-50 p-6 rounded-lg">
            <h4 class="text-xl font-semibold mb-4">Description</h4>
            <p class="text-gray-600 leading-relaxed">
              Experience luxury living in this beautiful property. Perfect for families and groups looking for a comfortable stay with modern amenities and convenient location. The property offers stunning views and is close to major attractions.
            </p>
          </div>
        </div>
      </div>
  </main>
</body>
</html>