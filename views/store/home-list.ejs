<%- include('../partials/head') %>
</head>
<body>
<%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xxl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Here are our Registered Homes: 
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% registeredHomes.forEach(home => { %>
      <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition duration-300 w-90">
        <img src="<%= home.photo %>" alt="<%= home.location %>" class="w-full h-48 object-cover" onerror="this.src='https://via.placeholder.com/400x300?text=No+Image+Available'">
        <div class="p-4">
          <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= home.houseName %></h3>
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span class="ml-1 text-gray-600"><%= home.rating %>/5</span>
          </div>
          <div class="flex items-center mb-2">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="ml-1 text-gray-600"><%= home.location %></span>
          </div>
          <div class="flex items-center justify-between mt-4">
            <span class="text-xl font-bold text-red-500">â‚¹<%= home.price %></span>
            <span class="text-sm text-gray-500">per night</span>
          </div>
          <div class="flex mt-5 justify-between">
            <%- include('../partials/favorite.ejs', {home: home}) %>
          <a class="bg-blue-500 text-white py-3 px-5 rounded hover:bg-blue-600 transition duration-300 ml-4" href="/homes/<%= home._id %>">Details</a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
</body>
</html>